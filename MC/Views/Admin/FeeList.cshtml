
@{
    ViewBag.Title = "佣金管理";
}

<h2>@ViewBag.Title</h2>

<table class="table table-hover " style="vertical-align:middle;">
    <thead>
        <tr>
            <th>操作</th>
            <th>订单号</th>
            <th>佣金</th>
            <th>是否支付</th>
            <th>推荐人昵称</th>
            <th>推荐人姓名</th>
            <th>创建人</th>
            <th>创建时间</th>
            <th>审核人</th>
            <th>审核时间</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Source != null)
        {
            foreach (var item in ViewBag.Source as List<MC.Models.Fee>)
            {
                <tr>
                    <td><a href='@Url.Action("OrderConfirm","Admin",new { id=item.ID})' class="btn btn-primary btn-sm" role="button">结佣</a></td>
                    <td><a href="#">@item.OrderNo</a></td>
                    <td>@item.Money.ToString("F2")</td>
                    <td>@Html.Raw(item.IsPay ? "是" : "否")</td>
                    <td>@item.PayeeUserName</td>
                    <td>@item.PayeeTrueName</td>
                    <td>@item.CrUser</td>
                    <td>@item.CrTime.Value.ToString("yyyy-MM-dd")</td>
                    <td>@item.Approver</td>
                    <td>@Html.Raw(item.ApproveTime.HasValue ? item.ApproveTime.Value.ToString("yyyy-MM-dd") : "")</td>
                </tr>

            }
        }
    </tbody>
</table>

