
@{
    ViewBag.Title = "Product";
}

<h2>课程管理</h2>
<a href='@Url.Action("CourseAdd","Admin")' class="btn btn-primary" role="button">新建</a>
<table class="table table-hover " style="vertical-align:middle;">
    <thead>
        <tr>
            <th>
                操作
            </th>
            <th>
                课程名称
            </th>
            <th>
                单价
            </th>
            <th>
                课时
            </th>
            <th>
                总价
            </th>
            <th>
                单位
            </th>
            <th>
                开课时间
            </th>
            <th>
                结课时间
            </th>
            <th>
                创建时间
            </th>
            <th>
                创建人
            </th>
            <th>
                更新时间
            </th>
            <th>
                更新人
            </th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Source != null)
        {
            foreach (var item in ViewBag.Source as MC.Models.Project[])
            {
                <tr>
                    <td><a href='@Url.Action("CourseAdd","Admin",new { id=item.ID})' class="btn btn-primary btn-sm" role="button">修改</a><a href='#' class="btn btn-primary btn-sm" role="button">开启</a></td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("F2")</td>
                    <td>@item.Amount</td>
                    <td>@item.Total.ToString("F2")</td>
                    <td>@item.Unit</td>
                    <td>@item.StartDate.Value.ToString("yyyy-MM-dd")</td>
                    <td>@item.EndDate.Value.ToString("yyyy-MM-dd")</td>
                    <td>@item.CrTime.Value.ToString("yyyy-MM-dd")</td>
                    <td>@item.CrUser</td>
                    <td>@item.UpTime.Value.ToString("yyyy-MM-dd")</td>
                    <td>@item.UpUser</td>
                </tr>
            }
        }
    </tbody>
</table>

