
@{
    ViewBag.Title = "推荐管理";
    Layout=null;
}
<html>
<head>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
</head>
<body>
    <h2>@ViewBag.Title</h2>
    <table class="table table-hover " style="vertical-align:middle;">
        <thead>
            <tr>
                <th>
                    操作
                </th>
                <th>
                    订单号
                </th>
                <th>
                    状态
                </th>
                <th>
                    客户名
                </th>
                <th>
                    客户手机
                </th>
                <th>
                    意向课程
                </th>
                <th>
                    课程费用
                </th>
                <th>
                    推荐人昵称
                </th>
                <th>
                    推荐人姓名
                </th>
                <th>
                    推荐时间
                </th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Source != null)
            {
                foreach (var item in ViewBag.Source as List<MC.Models.query.OrderQuery>)
                {
                    <tr>
                        <td><a href='@Url.Action("OrderConfirm","Admin",new { id=item.ID})' class="btn btn-primary btn-sm" role="button">确认</a></td>
                        <td>@item.OrderNo</td>
                        <td>@item.State</td>
                        <td>@item.CusName</td>
                        <td>@item.CusPhone</td>
                        <td>@item.Name</td>
                        <td>@item.ProMoney.ToString("F2")</td>
                        <td>@item.UserName</td>
                        <td>@item.TrueName</td>
                        <td>@item.CrTime</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>

