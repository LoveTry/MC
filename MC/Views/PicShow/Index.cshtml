
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>产品展示</title>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
    <style>

        .flow-default {
            width: 100%;
            height: 100%;
            /*overflow: auto;*/
            -webkit-overflow-scrolling: touch;
            font-size: 0;
        }

            .flow-default li {
                padding: 10px 10px 20px 10px;
                background-color: white;
                border: solid 1px #eee;
                border-radius: 5px;
                box-shadow: 5px 5px 5px #888888;
                display: inline-block;
                margin: 0 5px;
                font-size: 14px;
                width: 40%;
                margin-bottom: 10px;
                height: 230px;
                /*line-height: 200px;*/
                text-align: center;
                color: #009688;
            }

            .flow-default img {
                width: 100%;
                height: 200px;
            }

            .flow-default span {
                margin: 10px;
            }

        .layui-layout-admin .layui-body {
            bottom: 0;
            left: 0;
        }
    </style>
</head>
<body class="layui-layout-body">
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            @*<div class="layui-logo">亿利昶</div>*@
            <ul class="layui-nav" lay-filter="demo">
                <li class="layui-nav-item layui-this"><a href="#">产品展示</a></li>
                <li class="layui-nav-item"><a href="#">联系我们</a></li>
            </ul>
        </div>

        <div class="layui-body">
            <div style="padding:15px;">
                <span class="layui-breadcrumb">
                    <a href="/">首页</a>
                    <a><cite>产品展示</cite></a>
                </span>
            </div>
            <div style="margin-top:10px">
                <form class="layui-form" action="">
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <div class="layui-input-inline">
                                <select name="modules" lay-verify="required" lay-search="">
                                    <option value="">直接选择或搜索选择</option>
                                    <option value="1">保鲜膜</option>
                                    <option value="2">杯子</option>
                                    <option value="3">餐盒</option>
                                    <option value="4">酱料杯</option>
                                    <option value="5">饺子盒</option>
                                    <option value="6">卷袋</option>
                                    <option value="7">牛皮纸</option>
                                    <option value="8">寿司盒</option>
                                    <option value="9">水果盒</option>
                                    <option value="10">塑料袋</option>
                                    <option value="11">托盘</option>
                                    <option value="12">吸管</option>
                                    <option value="13">锡纸</option>
                                    <option value="14">杂货</option>
                                    <option value="15">纸抽</option>
                                    <option value="16">纸袋</option>
                                    <option value="17">纸浆餐具</option>
                                    <option value="18">竹签</option>
                                    <option value="19">筷子</option>
                                    <option value="20">披萨盒</option>
                                </select>
                            </div>
                        </div>
                        <div class="layui-inline">
                            <button class="layui-btn layui-btn-normal">查看</button>
                        </div>
                    </div>
                </form>
            </div>
            <fieldset class="layui-elem-field layui-field-title" style="margin-top: 30px;">
                <legend>产品展示</legend>
            </fieldset>
            <ul class="flow-default" id="LAY_demo2"></ul>
        </div>
    </div>


    <script>
        layui.use(['layer', 'element', 'form', 'flow'], function () {
            var element = layui.element; //导航的hover效果、二级菜单等功能，需要依赖element模块
            var layer = layui.layer;
            var form = layui.form;
            var flow = layui.flow;
            //监听导航点击
            element.on('nav(demo)', function (elem) {
                //console.log(elem)
                layer.msg(elem.text());
            });

            //按屏加载图片
            //flow.lazyimg({
            //    elem: '#LAY_demo3 img'
            //    , scrollElem: '#LAY_demo3' //一般不用设置，此处只是演示需要。
            //});

            flow.load({
                elem: '#LAY_demo2' //流加载容器
                , scrollElem: '' //滚动条所在元素，一般不用填，此处只是演示需要。
                , isAuto: false
                , isLazyimg: true
                , done: function (page, next) { //加载下一页
                    //模拟插入
                    setTimeout(function () {
                        var lis = [];
                        for (var i = 0; i < 6; i++) {
                            lis.push('<li><div><img src="../../../images/pic1.jpg" /><span>产品说明<span></div></li>')
                        }
                        next(lis.join(''), page < 6); //假设总页数为 6
                    }, 500);
                }
            });
        });
    </script>
</body>
</html>
